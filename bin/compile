#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Installing youtube-dl"

BUILD_DIR=$1
VENDOR_DIR="vendor"
DOWNLOAD_URL="https://yt-dl.org/latest/youtube-dl"

PROFILE_PATH="$BUILD_DIR/.profile.d/youtube-dl.sh"
mkdir -p $(dirname $PROFILE_PATH)

. $PROFILE_PATH

cd $HOME
ls
cd /usr/local/bin
curl -L --silent $DOWNLOAD_URL | tar xz
